
@import "reset.css"
@import "mixins.styl"

.ellipsis
  display block
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

#app
  width 100%
  height 100%
  padding-top 45px
  background: #F5F5F5
  #content
    width 100%
    height 100%
    >section
      height 100%
      display none
      /*section里面的内容样式*/
      header
        width 100%
        height: 45px
        background #02a774
        position fixed
        top 0
        z-index 2
        color #ffffff
        .search,.shop-list,.title
          font-size 22px
          position absolute
          left 50%
          top 50%
          transform translate(-50%,-50%)
        a
         position absolute
         top 50%
         transform translateY(-50%)
         &.left
           left 15px
           width 10%
         &.middle
           left 50%
           width 50%
           transform translate(-50%,-50%)
           color #ffffff
           font-size 20px
           display block
           white-space nowrap
           overflow hidden
           text-overflow ellipsis
           margin-left -4%
          &.right
           right 15px
           font-size 14px
           color #fff
        .iconfont
            font-size 25px
            color #ffffff
       /*主页的主体样式*/
      .main

        .swiper-container
          width 100%
          height 200px
          background #ffffff
          margin-bottom 12px
          .swiper-pagination-bullet-active
            background #02a774
          .swiper-wrapper
            .swiper-slide
               clearFix()
               li
                 float left
                 width 25%
                 margin-bottom 27px
                 >a
                   width 100%
                   display flex
                   flex-direction column
                   align-items center
                   img
                     width 50px
                     height 50px
                     margin-bottom 10px
                   span
                     font-size 13px
                     color #666

        .shop-list
          padding-bottom 50px
          top-border-1px(#e4e4e4)
          @extend .border-1px
          background: #ffffff
          .shop-header
            padding 10px 10px 0
            fonts-size 14px
            color #999
          .list
             li
              top-border-1px(#f1f1f1)
              @extend .border-1px
              >a
                display block
                padding 15px 8px
                clearFix()
                >div
                  float left
                  &.left
                    width 23%
                    height 75px
                    padding-right 15px
                    box-sizing border-box
                    img
                     width 100%
                     height 100%
                     display block
                  &.right
                    width 77%
                   .shop-detail-header
                     clearFix()
                     h4
                       float left
                       width 140px
                       font-size 16px
                       color  #000
                       font-weight bold
                       @extend .ellipsis
                       &:before
                          display inline-block
                          color #333
                          content '品牌'
                          font-size 11px
                          background: #ffd930
                          padding 2px
                          margin-right 5px
                          border-radius 2px


                     ul.shop-detail-ul
                       float right
                       margin-top 3px
                       li
                        float left
                        font-size 10px
                        color #999
                        border 1px solid #f1f1f1
                        padding 0 2px
                        border-radius 2px

                   .shop-rating
                     clearFix()
                     margin-top 18px
                     margin-bottom 8px
                     >.left
                       float left
                       >div
                         float left
                         font-size 10px
                         &.stars
                           div
                            float left
                            width 10px
                            height 10px
                            background-repeat no-repeat
                            background-size 100%
                            &.on
                              bg-image('../images/stars/star24_on')
                            &.half
                              bg-image('../images/stars/star24_half')
                            &.off
                              bg-image('../images/stars/star24_off')
                         &.rating
                           color #ff6000
                           margin-left 4px
                         &:last-child
                           color #666
                           transform scale(0.8)
                     >.right
                       float right
                       .shop-feature
                          transform-origin 35px 0
                          transform scale(0.7)
                          display inline-block
                          font-size 12px
                          padding 1px
                          border-radius 2px
                          &.feature-left
                             margin-right  -12px
                             color #ffffff
                             background: #02a774
                          &.feature-right
                             color #02a774
                             background: #ffffff
                             border 1px solid #02a774


                   .shop-peisong
                     font-size 12px
                     color #666
                     transform scale(0.9)
                     transform-origin 0

       /*搜索页的主体样式*/
      .todo-search
        background: #fff
        form
          padding 12px 8px
          clearFix()
          input
            height 35px
            padding 0 4px
            border-radius 2px
            font-weight bold
            outline none
            &[type='text']
               float left
               width 79%
               border 4px solid #f2f2f2
               font-size 14px
               color #333
               background-color #f2f2f2
               box-sizing border-box
            &[type='submit']
              float right
              width 18%
              border 4px solid #02a774
              font-size 16px
              color white
              background-color #02a774



       /*登录页主体样式*/
      .go-login
         width 60%
         padding-top 140px
         margin 0 auto
         text-align center
         img
           width: 100%
           height: 30%
         p
           padding 10px 0
           font-size 17px
           color #6a6a6a
         button
           background:#02a774
           color #ffffff
           font-size 14px
           border 0
           outline none
           border-radius 5px
           padding 10px 20px

       /*个人中心页 主体样式*/
      .personal
         border-top 1px solid #ffffff
         /*登录*/
        .personal-number
           a
             display block
             padding 20px 10px
             background #02a774
             position relative
             clearFix()
             >div
               float left
               &.personal-image
                 width 60px
                 height 60px
                 border-radius 50%
                 overflow hidden
                 vertical-align top
                 i
                   font-size 62px
                   color #e4e4e4
               &.personal-info
                  color #ffffff
                  margin-top 8px
                  margin-left 15px
                  p
                    font-size 18px
                    font-weight bold
                    &:first-child
                      margin-bottom 8px
                    .user-icon
                       display inline-block
                       margin-left -15px
                       margin-right 5px
                       width 20px
                       height 20px
                       i
                         font-size 30px
                         vertical-align text-top
                    .moblie-number
                       font-size 14px



             >span
               width 12px
               height 12px
               position absolute
               top 40%
               right 15px
               i
                color #ffffff
                font-size 5px


        .person-info-data
           width 100%
           background: #ffffff
           margin-bottom 15px
           clearFix()
           a
             width 33%
             float left
             text-align center
             border-right  1px solid #f1f1f1
             &:nth-child(2)
               span.info-top>span
                 color #ff5f3e
             &:last-child
               border 0
               span.info-top>span
                 color #6ac20b
             span.info-top
               width 100%
               display block
               font-size 14px
               color #333
               padding 15px 5px 10px
               span
                 display inline-block
                 font-size: 30px
                 line-height 30px
                 font-weight bold
                 color #f90
             span.info-bottom
                 display inline-block
                 font-size 14px
                 color #666
                 font-weight 400
                 padding-bottom 10px



        .person-order
            background: #fff
            &:last-of-type
              margin-top 15px
            a
             display flex
             align-items center
             padding-left 15px
             &:nth-child(1)
               >span>i
                color #02a774
             &:nth-child(2)
               >span>i
                 color #ff5f3e
             &:nth-child(3)
               >span>i
                color #f90


             >span
              display flex
              align-items center
              width: 20px
              height: 20px
              i
               margin-left -10px
               font-size 30px
             >div
                width: 100%;
                border-bottom 1px solid #f1f1f1
                padding 18px 10px 18px 0
                font-size 16px
                color #333
                display flex
                justify-content space-between
                i
                  color #bbb
                  font-size 10px



      &.active
       display block

  footer
    top-border-1px(#e4e4e4)
    @extend .border-1px
    width 100%
    height 50px
    position fixed
    bottom 0
    display flex
    background: #ffffff
    .guide
      flex 1
      display flex
      flex-direction column
      align-items center
      span
       &:first-child
         margin 7px 0 4px
        .iconfont
         font-size 22px
       &:last-child
        font-size 12px
      &.on
        color #02a774



  >.off
    display none
  >.on
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    z-index 200
    .loginContainer
      width 100%
      height 100%
      background #fff
      .loginInner
        padding-top 60px
        width 80%
        margin 0 auto
        .login_header
          .login_logo
            font-size 40px
            font-weight bold
            color #02a774
            text-align center
          .login_header_title
            padding-top 40px
            text-align center
            >a
              color #333
              font-size 14px
              padding-bottom 4px
              &:first-child
                margin-right 40px
              &.on
                color #02a774
                font-weight 700
                border-bottom 2px solid #02a774
        .login_content
          >form
            >div
              display none
              &.on
                display block
              input
                width 100%
                height 100%
                padding-left 10px
                box-sizing border-box
                border 1px solid #ddd
                border-radius 4px
                outline 0
                font 400 14px Arial
                &:focus
                  border 1px solid #02a774
              .login_message
                position relative
                margin-top 16px
                height 48px
                font-size 14px
                background #fff
                .get_verification
                  position absolute
                  top 50%
                  right 10px
                  transform translateY(-50%)
                  border 0
                  color #ccc
                  font-size 14px
                  background transparent
              .login_verification
                position relative
                margin-top 16px
                height 48px
                font-size 14px
                background #fff
                .switch_button
                  font-size 12px
                  border 1px solid #ddd
                  border-radius 8px
                  transition background-color .3s,border-color .3s
                  padding 0 6px
                  width 30px
                  height 16px
                  line-height 16px
                  color #fff
                  position absolute
                  top 50%
                  right 10px
                  transform translateY(-50%)
                  &.off
                    background #fff
                    .switch_text
                      float right
                      color #ddd
                  &.on
                    background #02a774
                  >.switch_circle
                    //transform translateX(27px)
                    position absolute
                    top -1px
                    left -1px
                    width 16px
                    height 16px
                    border 1px solid #ddd
                    border-radius 50%
                    background #fff
                    box-shadow 0 2px 4px 0 rgba(0,0,0,.1)
                    transition transform .3s
              .login_hint
                margin-top 12px
                color #999
                font-size 14px
                line-height 20px
                >a
                  color #02a774
            .login_submit
              display block
              width 100%
              height 42px
              margin-top 30px
              border-radius 4px
              background #4cd96f
              color #fff
              text-align center
              font-size 16px
              line-height 42px
              border 0
          .about_us
            display block
            font-size 12px
            margin-top 20px
            text-align center
            color #999
        .go_back
          position absolute
          top 5px
          left 5px
          width 30px
          height 30px
          >.iconfont
            font-size 20px
            color #999





